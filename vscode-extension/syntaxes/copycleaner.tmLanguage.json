{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CopyCleaner",
  "scopeName": "source.copycleaner",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#builtins" },
    { "include": "#constants" },
    { "include": "#regex" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.copycleaner",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.copycleaner",
          "match": "\\b(if|elif|else|while|break|continue|return|function|returns)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.copycleaner",
          "match": "\\b(int|float|boolean|string|regex|match|list)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.copycleaner",
          "match": "\\b(exit|fstring|setLog|log|print|setEncoding|clipboard_isText|clipboard_read|clipboard_write)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.copycleaner",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.copycleaner",
          "match": "\\bnull\\b"
        }
      ]
    },
    "regex": {
      "patterns": [
        {
          "name": "string.regexp.copycleaner",
          "begin": "/",
          "end": "/[igm]*",
          "patterns": [
            {
              "name": "constant.character.escape.copycleaner",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fstring.copycleaner",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.copycleaner",
              "match": "\\\\."
            },
            {
              "name": "constant.other.placeholder.copycleaner",
              "match": "%\\d+"
            }
          ]
        },
        {
          "name": "string.quoted.double.copycleaner",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.copycleaner",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.copycleaner",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.copycleaner",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.negative.copycleaner",
          "match": "\\-\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.copycleaner",
          "match": "\\*\\*|\\+\\+|[\\+\\-\\*\\/]"
        },
        {
          "name": "keyword.operator.comparison.copycleaner",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.copycleaner",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.copycleaner",
          "match": "="
        },
        {
          "name": "keyword.operator.ternary.copycleaner",
          "match": "\\?|:"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.copycleaner",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    }
  }
}
